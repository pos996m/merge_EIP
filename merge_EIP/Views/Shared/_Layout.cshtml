<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @* bs4 *@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @* JQ3.6 *@
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    @* icon *@
    <link href="~/Scripts/fontawesome-free-5.15.4-web/css/all.css" rel="stylesheet" />
    @* sweetalert *@
    <script src="~/Scripts/sweetaleat/sweetalert2@11.js"></script>
    @*Layout css*@
    <link href="~/Content/Layoutcss.css" rel="stylesheet" />
    <style>
        .btn-FB {
            background-color: #3b5998;
            border: #3b5998;
            color:white;
        }
    </style>
    @*<script src="~/Scripts/modernizr-2.8.3.js"></script>*@
</head>
<body>
    <div class="navbar navbar-expand-md  navbar-inverse navbar-fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#" style="color: #fff;"><b>EIP系統</b></a>
            <!-- 縮排成漢堡鈕 -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">打卡<span class="sr-only">(current)</span></a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("打卡", "Index", "Clockin", new { }, new { @class = "dropdown-item" })
                            @Html.ActionLink("出缺勤紀錄查詢", "Search", "Clockin", new { }, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            表單申請
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("審核申請", "bosscheck", "Home", new { }, new { @class = "dropdown-item" })
                            @Html.ActionLink("申請紀錄查詢", "check", "Home", new { }, new { @class = "dropdown-item" })
                            @Html.ActionLink("請假單", "dayoff3", "Home", new { }, new { @class = "dropdown-item" })
                            @Html.ActionLink("加班單", "overtime", "Home", new { }, new { @class = "dropdown-item" })
                            @Html.ActionLink("補卡申請", "About", "Home", new { }, new { @class = "dropdown-item" })
                            @Html.ActionLink("經費申請", "About", "Home", new { }, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">工作日誌</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("代辦事項", "About", "Home", new { }, new { @class = "dropdown-item" })
                            @Html.ActionLink("行事曆", "About", "Home", new { }, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("留言板", "About", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("訂餐系統", "About", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("小遊戲", "About", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("帳戶設定", "About", "Home", new { }, new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
            <div style="color: snow;">現在時間 :</div>
            <div id="times" style="color: snow;"></div>
            <!-- 新增使用者資訊 -->
            <div class="nav-item dropdown float-right">
                <a class="nav-link dropdown-toggle pull-right" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">
                    <img src="~/Content/img/people.png"
                         style="width: 30px;height: 25px;">
                </a>
                <div class="dropdown-menu dropdown-menu-right p-3 text-muted" aria-labelledby="navbarDropdown"
                     style="max-width: 15rem; ">
                    <p class="mb-0">使用者 :</p>
                    <p class="">@Session["Name"]</p>
                    <p class="mb-0">部門資訊 :</p>
                    <p class="">@Session["Dep"]@Session["Pos"]</p>
                    <p>@Html.ActionLink("登出", "Logout", "Login", new { }, new { @class = "dropdown-item btn btn-FB", style= "text-align:center;" })</p>
                </div>
            </div>
        </div>
        <!-- 使用者資訊結束 -->
    </div>
    @RenderBody()
    <footer>
        <div>
            <script src="~/Scripts/weekmonth.js"></script>
            <script src="~/Scripts/timer.js" type="text/javascript"></script>
            <div class="footer">
                <p> Copyright © 2021 SMIT14 team3 All right reserved. </p>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/Layout/timer.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

</body>
</html>